<p id="notice"><%= notice %></p>

<h1>New Post</h1> 
<%= render 'form', post: @post %>

<br><br><h1>Posts</h1>
<p>Buscar:</p>
<form action="<%= posts_path %>">
  <input type="text" name="buscar">
</form><br><br>

<table class="table" id="postList">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render @posts %>
  </tbody>
</table>

<script>
  $("[name=buscar]").keypress(function(e) {
    $.ajax({
      url: '<%= posts_path %>',
      type: 'GET',
      dataType: 'script',
      data: { buscar: $(this).val() }
    });
  });
</script>
